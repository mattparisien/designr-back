{
  "preset": "ts-jest",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testPathIgnorePatterns": [
    "/node_modules/",
    "/dist/"
  ],
  "collectCoverageFrom": [
    "agent/**/*.ts",
    "services/**/*.ts",
    "!**/node_modules/**",
    "!**/dist/**"
  ],
  "coverageDirectory": "coverage",
  "coverageReporters": [
    "text",
    "html",
    "lcov"
  ],
  "testTimeout": 30000,
  "clearMocks": true,
  "resetMocks": true,
  "restoreMocks": true
}
