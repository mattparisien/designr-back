# Vector Store Configuration
# Add these environment variables to your .env file

# OpenAI API Configuration (Required for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Pinecone Configuration (Optional - falls back to local HNSW if not provided)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=your_pinecone_environment_here
PINECONE_INDEX_NAME=canva-clone-assets

# Vector Store Settings (Optional)
VECTOR_DIMENSION=1536
VECTOR_SIMILARITY_THRESHOLD=0.7
VECTOR_MAX_RESULTS=50

# Example .env file additions:
# OPENAI_API_KEY=sk-...
# PINECONE_API_KEY=...
# PINECONE_ENVIRONMENT=us-west1-gcp-free
# PINECONE_INDEX_NAME=canva-clone-assets
